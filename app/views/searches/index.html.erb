<div id="headerBar"></div>

<div class="container" style="margin-top:20px">
	<h1 style="color:#9838B0;font-size:42px">trackly</h1>
</div>


<div class="container" style="margin-top:190px" align="center">

	<div class="row">

		<div class="col-lg-3">
		</div>

		<div class="col-lg-6">
			<%= form_tag(searches_get_similar_path, method: :get, id: 'search_bar') do%> 
			<div class="row">
				<div class="col-md-5">
					<%= text_field_tag "track", params[:track], placeholder: "Song name", class: "form-control input-lg" %>
				</div>
				<div class="col-md-5">
					<%= text_field_tag "artist", params[:artist], placeholder: "Artist", class: "form-control input-lg" %>
				</div>
				<div class="col-md-2">
					<%= submit_tag "Search", class:"btn btn-lg btn-default", style:"color:#9838B0" %>
				</div>
			</div>
			<% end %> 
			
		</div>

		<div class="col-lg-3">
		</div>

	</div>


</div>