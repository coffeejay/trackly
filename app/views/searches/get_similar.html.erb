<div id="headerBar"></div>

<div class="container" style="margin-top:20px">
	<h1 style="color:#9838B0;font-size:42px">trackly</h1>
	<br/>
	<h3>Songs you'll also like based on <span style='color:#9838B0'><%= @track_name %></span> by <span style='color:#9838B0'><%= @artist %> -</h3></span>
</div>

<div class="container" style="margin-top:30px;margin-left:150px;margin-bottom:100px">
	<% @similar_tracks.each_with_index do |track, index| %>


		<a href= "<%= track['url'] %>" target="blank" style="text-decoration: none; color:#000">
			<h3><%= image_tag("#{@images[index]}", :style => "margin-right:20px", :class => "img-circle animation-target")  %> <span class="scale-target"><%= track["name"] %> - <%= track["artist"]["name"] %> </span></h3>
		</a>

	<% end %>
</div>